<!-- Images need to be in the public folder. Like all static stuff.-->
              
<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <img src="images/explore.jpg" alt="Explore" class="img-responsive center-block">
      <div class="carousel-caption">
        <h3>Explore.</h3>
        <p>Get in touch with different activities.</p>
      </div>
    </div>

    <div class="item">
      <img src="images/socialize.jpg" alt="Socialize" class="img-responsive center-block">
      <div class="carousel-caption">
        <h3>Socialize.</h3>
        <p>Get to know other people.</p>
      </div>
    </div>

    <div class="item">
      <img src="/images/relax.jpg" alt="Relax" class="img-responsive center-block">
      <div class="carousel-caption">
        <h3>Relax.</h3>
        <p>Enjoy your time off from uni.</p>
      </div>
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

