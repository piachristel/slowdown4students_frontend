<link rel="stylesheet" href="/stylesheets/style.css" />
<html lan="en">
    <head>
        <title>Create Movie Activity</title>
    </head>

    <body>
        <span class="title">Create a new Movie Activity:</span>
        <div class="page-data"> 
            <form method="post" action="">
                <table cellpadding="11">
                <tr>
                    <td class="label">name</td><td> <input type="text" name="title" required></td>
                 </tr>
                 <tr>
                    <td class="label">title</td><td valign="top"> <input name="name" required cols="40"></input></td>
                </tr>
                <tr>
                    <td class="label">category</td><td valign="top"> <input name="category" required cols="40"></input></td>
                </tr>
                <tr>
                    <td class="label">place</td><td valign="top"> <input name="place" required cols="40"></input></td>
                </tr>
                <tr>
                    <td class="label">date</td><td valign="top"> <input name="date" required cols="40"></input></td>
                </tr>
                 <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit"  value="Save">
                       <input type="button" value="Cancel" class="cancel" onClick="cancelAdd()">
                    </td>
                 </tr>
                </table>
            </form>
        </div>
    </body>